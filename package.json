{
  "name": "@wangshunnn/bilibili-mcp-server",
  "version": "0.0.1",
  "packageManager": "pnpm@10.10.0",
  "description": "MCP server for using the bilibili API",
  "license": "MIT",
  "author": "Soon Wang",
  "homepage": "https://github.com/wangshunnn/bilibili-mcp-server",
  "bugs": "https://github.com/wangshunnn/bilibili-mcp-server/issues",
  "type": "module",
  "bin": {
    "bilibili-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "publish:patch": "npm version patch && npm publish --access public",
    "publish:minor": "npm version minor && npm publish --access public",
    "publish:major": "npm version major && npm publish --access public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@types/node": "^22.15.12",
    "@types/node-fetch": "^2.6.12",
    "add": "^2.0.6",
    "bili-api": "^1.10.1",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "typescript": "^5.8.3"
  }
}
